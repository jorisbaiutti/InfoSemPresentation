{
    "latex-workshop.latex.autoBuild.run": "onFileChange",
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
         "name": "makeglossaries",
         "command": "makeglossaries",
         "args": [
           "%DOCFILE%"
         ]
       }
    ],
     "latex-workshop.latex.recipes": [
         {
             "name": "pdflatex",
             "tools": [
                 "pdflatex"
                 
             ]
         }
     ],
}